@{
    /// <summary>
    /// Specify resource inclusions here
    /// 
    /// Override in child theme if you want to include different resources.
    /// To just add to this set, override AdditionalTopResources.cshtml if you want to add resources to the top or AdditionalResources.cshtml
    /// to add to the bottom.
    /// </summary>
}

@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;

@{
    Display.AdditionalTopResources();
    
    var theme = WorkContext.CurrentTheme;
    /* Links
    ***************************************************************/
    SetMeta(new MetaEntry { Name = "viewport", Content = "width=device-width, initial-scale=1.0" }); // Needed for Bootstrap responsiveness
    SetMeta(httpEquiv: "X-UA-Compatible", content: "IE=edge,chrome=1");
        
    /* Styles
    ***************************************************************/
    Style.Include("fonts.css");
    Style.Include("site.css");
    
    /* Scripts
    ***************************************************************/

    Display.AdditionalResources();
}